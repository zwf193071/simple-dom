{
  "extends": "tsconfigs/browser-module",
  "compilerOptions": {
    "composite": true,
    "strictFunctionTypes": false,
    "target": "ES2015",
    "outDir": "../../build/package",
    "plugins": [
      {
        "transform": "ts-transform-import-path-rewrite",
        "import": "transform",
        "alias": {
          "^(\\..*)(?<!\\.js)$": "$1.js"
        },
        "after": true,
        "type": "config"
      }
    ]
  },
  "files": [
    "h.ts",
    "init.ts",
    "jsx-global.ts",
    "jsx.ts",
    "modules/attributes.ts",
    "modules/class.ts",
    "modules/props.ts",
    "modules/style.ts",
    "vnode.ts"
  ]
}
